---
interface Props {
    url:string;
    name:string;
    isBig?: boolean;
}

const {name,url, isBig } = Astro.props; //isBig = false
const id = url.split("/").at(-2);

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<!-- href={`/pokemon/${id}`} -->
<a 
href={`/pokemons/${name.toLocaleLowerCase()}`}
class:list={
    [
        "roundend flex flex-col justify-center items-center p-2 mt-2",
        {
            border: !isBig,
        }
    ]
}>
    <img 
        transition:name={`${name}-image`}
        class:list=
            {["w-26 h-26",{"w-16 h-16": !isBig}]} 
            src={imageSrc} 
            alt=`"Imagen de" + ${name}`
        >
    <span class:list={["capitalize", {"text-5xl": isBig,}]}>
    
     #{id} {name}
    </span>
</a>